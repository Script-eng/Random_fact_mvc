@{
    var randomFacts = ViewData["RandomFacts"] as List<string>; // Cast to List<string>
}

<div style="text-align: center; margin-top: 50px;">
    <h2>Here are some random facts for you:</h2>

    <ul style="list-style-type: none; padding: 0; max-width: 600px; margin: 0 auto;">
        @foreach (var fact in randomFacts)
        {
            <li style="background-color: #f2f2f2; border-radius: 10px; padding: 15px; margin-bottom: 10px; transition: transform 0.3s, box-shadow 0.3s;">
                @fact
            </li>
        }
    </ul>
</div>

<!-- Add hover effect -->
<style>
    li:hover {
        transform: scale(1.02); /* Slight zoom effect */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Shadow effect */
    }
</style>
